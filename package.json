{
  "name": "oracle-sdk",
  "version": "1.0.0",
  "description": "Oracle sdk npm package for convenient interaction with Oracle and Oracle contract",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.json",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "prettier": "npx prettier src --check",
    "prettier:fix": "yarn prettier --write",
    "format": "yarn prettier:fix && yarn lint:fix",
    "test": "mocha 'test/**/*.ts' --timeout 10000",
    "prepack": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skalenetwork/oracle-sdk.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skalenetwork/oracle-sdk/issues"
  },
  "homepage": "https://github.com/skalenetwork/oracle-sdk#readme",
  "devDependencies": {
    "@skaleproject/pow-ethers": "^0.3.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.4",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "viem": "^1.4.1"
  },
  "engines": {
    "node": "16.15.0 || 17.5.0 || >=18"
  },
  "engineStrict": true,
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "recursive": true,
    "extension": [
      "ts",
      "js",
      "tsx"
    ]
  }
}
